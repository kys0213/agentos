{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["src/main/**/gen/**", "src/shared/rpc/gen/**", "src/renderer/rpc/gen/**"],
  "parserOptions": {
    "project": ["./tsconfig.json", "./tsconfig.tests.json"]
  },
  "rules": {
    "curly": ["warn", "all"],
    "brace-style": ["error", "1tbs", { "allowSingleLine": false }],
    "no-nested-ternary": "warn",
    "multiline-ternary": ["warn", "always-multiline"],
    "@typescript-eslint/no-explicit-any": "error",
    "no-restricted-syntax": [
      "error",
      {
        "selector": "TSAsExpression > TSAnyKeyword",
        "message": "Do not use 'as any'; use proper typing, generics, or runtime guards."
      }
    ]
  },
  "overrides": [
    {
      "files": ["src/renderer/**/*.{ts,tsx}"],
      "rules": {
        "no-restricted-syntax": "error",
        "@typescript-eslint/no-explicit-any": "error",
        "prettier/prettier": "warn"
      }
    },
    {
      "files": [
        "src/**/*.__tests__.*",
        "src/**/__tests__/**/*.{ts,tsx}",
        "src/**/?(*.)+(spec|test).{ts,tsx}"
      ],
      "rules": {
        "@typescript-eslint/no-require-imports": "error",
        "@typescript-eslint/no-var-requires": "error",
        "no-restricted-syntax": [
          "error",
          {
            "selector": "TSAsExpression > TSAnyKeyword",
            "message": "Do not use 'as any' in tests. Model types explicitly or use narrow test-only interfaces."
          },
          {
            "selector": "ImportExpression",
            "message": "Dynamic import() is forbidden in tests. Use static imports or dependency injection/mocks."
          }
        ],
        "@typescript-eslint/no-explicit-any": "warn",
        "prettier/prettier": "warn"
      }
    }
  ]
}
